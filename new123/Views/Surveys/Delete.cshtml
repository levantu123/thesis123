@model new123.Models.Survey

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Pages/src/css/w3.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SUR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="menu-link">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="menu-link">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="menu-link">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="menu-link">@Html.ActionLink("Surveys", "Index", "Surveys")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <h3 style="padding-top: 50px" class="w3-center">Are you sure you want to delete this?</h3>
    <div style="padding-left: 100px; padding-top:50px">
       
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.SurveyName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SurveyName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SupplierID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SupplierID)
            </dd>

            <dt>
                Description
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SurveyJson)
            </dd>

            <dt>
                Published
            </dt>


            @if (!Model.Discontinued)
    {
        <dd>Yes</dd>
}
            @if (Model.Discontinued)
    {
        <dd>No</dd>
}



        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</body>
</html>
