<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Pages/src/css/w3.css")


</head>
<body>
    <div class="w3-top">
        <div class="w3-bar w3-white w3-padding w3-card" style="letter-spacing:4px;">
                @Html.ActionLink("Home", "Index", "Home", new { area = "" },  new { @class= "w3-bar-item w3-button" })
                @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "w3-bar-item w3-button" })
                @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "w3-bar-item w3-button" })
                @Html.ActionLink("Surveys", "Index", "Surveys", new { area = "" }, new { @class = "w3-bar-item w3-button" })
                <div class="w3-right w3-hide-small">
                    @Html.Partial("_LoginPartial")
                </div>
                
            
            <!-- Right-sided navbar links. Hide them on small screens -->
            
        </div>
    </div>

    <div>
        @RenderBody()
        <footer class="w3-center w3-light-grey w3-padding-32">
            <p>Powered by <a href="#" title="W3.CSS" target="_blank" class="w3-hover-text-green">antulev</a><br />@DateTime.Now.Year - Do not stay behind</p>
        </footer>
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>